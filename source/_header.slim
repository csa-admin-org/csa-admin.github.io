header class='my-6 md:my-12 flex flex-wrap md:flex-nowrap justify-between'
  div class='flex items-center grow w-full md:w-fit justify-center md:justify-start'
    = inline_svg 'logo.svg', class: 'fill-current w-10 h-10 md:w-12 md:h-12', alt: t("logo_alt")
    nav class='text-logo-green ml-3 font-bold text-2xl tracking-tight flex items-center'
      span
        = link_to "CSA", "/", class: "font-bold  #{"no-underline" unless I18n.locale == :en} underline-offset-4 hover:underline"
      span class="font-extralight text-base px-1 md:px-2"
        = "/"
      span
        = link_to "ACP", "/acp", class: "font-bold #{"no-underline" unless I18n.locale == :fr} underline-offset-4 hover:underline"
      span class="font-extralight text-base px-1 md:px-2"
        = "/"
      span
        = link_to "Solawi", "/solawi", class: "font-bold #{"no-underline" unless I18n.locale == :de} underline-offset-4 hover:underline"
      span class="ml-3"
        = "Admin"

  div class='flex items-center gap-4 w-full md:text-base md:w-fit mt-6 md:mt-0 justify-center md:justify-end'
    = link_to t('header.features'), '#features', class: 'text-gray-800 text-lg font-medium decoration-2 underline-offset-2 hover:underline'
    = link_to t('header.demo'), '#contact', class: 'text-gray-800 underline-offset-2 text-lg font-medium decoration-2 underline-offset-2 hover:underline'
    = link_to t('header.about'), '#about', class: 'text-gray-800 underline-offset-2 text-lg font-medium decoration-2 underline-offset-2 hover:underline'

  div class='flex flex-col items-center md:items-end w-full md:w-fit mt-6 md:mt-0 md:ml-16 justify-center md:justify-end'
    = link_to data.site.contact.email_link, class: 'flex items-center no-underline text-gray-800', title: t('email') do
      = inline_svg 'envelope.svg', class: 'w-5 h-5 md:order-2 mr-2 md:mr-0 md:ml-3 mt-0.5', alt: t('email')
      strong class='font-semibold md:order-1'
        = data.site.contact.email
    = link_to data.site.contact.phone_link, class: 'mt-0.5 flex items-center no-underline text-gray-800', title: t('phone') do
      = inline_svg 'phone.svg', class: 'w-5 h-5 md:order-2 mr-2 md:mr-0 md:ml-3', alt: t('phone')
      strong class='font-semibold md:order-1'
        = data.site.contact.phone
